{
  "builds": [
    {
      "src": "poke-server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "poke-react/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "poke-server/server.js"
    },
    {
      "src": "/graphql",
      "dest": "poke-server/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "poke-react/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "poke-react/index.html"
    }
  ]
}